# Production Server Environment Configuration
# Copy this to .env on your production server

# Database - Use your actual database credentials
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://optcgsim_user:YOUR_SECURE_PASSWORD@localhost:5432/optcgsim"
DIRECT_URL="postgresql://optcgsim_user:YOUR_SECURE_PASSWORD@localhost:5432/optcgsim"

# JWT Secrets - GENERATE NEW SECRETS FOR PRODUCTION!
# Generate with: openssl rand -base64 32
JWT_SECRET="GENERATE_WITH_openssl_rand_-base64_32"
JWT_REFRESH_SECRET="GENERATE_WITH_openssl_rand_-base64_32"

# Server
PORT=4000
NODE_ENV=production

# Client URL (for CORS) - Your frontend domain on Vercel
# Can be comma-separated for multiple origins
CLIENT_URL="https://yourdomain.com,https://www.yourdomain.com"

# OAuth (optional - configure if using social login)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""
