# Database (Supabase or local PostgreSQL)
# For Supabase, use the connection pooler URL (port 6543)
DATABASE_URL="postgresql://postgres:password@localhost:5432/optcgsim"

# Direct connection for migrations (Supabase: use port 5432)
DIRECT_URL="postgresql://postgres:password@localhost:5432/optcgsim"

# JWT Secrets (generate secure random strings for production!)
# Use: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"

# Server
PORT=4000
NODE_ENV=development

# Client URL (for CORS)
CLIENT_URL="http://localhost:3000"

# OAuth (optional - for social login)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""
